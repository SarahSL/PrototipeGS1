<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results: " />

        <ViewFlipper
            android:id="@+id/flipper1"
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="category1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="category2" />

            </LinearLayout>


        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/flipper2"
            android:layout_width="426dp"
            android:layout_height="309dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title2" />


                <TextView
                    android:id="@+id/sinopsis2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sinopsis2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title1" />


                <TextView
                    android:id="@+id/sinopsis1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sinopsis1" />

            </LinearLayout>


        </ViewFlipper>

        <Button
            android:id="@+id/enlaceContenido"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ver contenido"
            android:visibility="visible"
            tools:layout_editor_absoluteY="206dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>