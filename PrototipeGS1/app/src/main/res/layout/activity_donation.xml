<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gs1.gestorsm.prototipegs1.DonationActivity">

    <TextView
        android:id="@+id/text_view_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_donation" />

    <EditText
        android:id="@+id/edit_text_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="donation"
        android:text="@string/text_button_donation" />

</LinearLayout>
